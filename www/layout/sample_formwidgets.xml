<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EditText"></TextView>

        <EditText
            android:id="@+id/minmaxTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CheckBox"></TextView>

        <CheckBox
            android:id="@+id/formCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test123"></CheckBox>


        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"></TextView>

        <RadioButton
            android:id="@+id/formRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test123"></RadioButton>

        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioGroup"></TextView>

        <RadioGroup

            android:id="@+id/formRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes"></RadioButton>

            <RadioButton
                android:id="@+id/radioButtonVal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"></RadioButton>
        </RadioGroup>


        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spinner"></TextView>

        <Spinner
            android:id="@+id/formSpinner"
            entries="Please Select,1,2,3"
            values=",1,2,3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="com.ashera.layout.MultiSelectionSpinner"></TextView>

        <com.ashera.layout.MultiSelectionSpinner
            android:id="@+id/formMultiSelectionSpinner"
            entries="1,2,3"
            values="1,2,3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please select"></com.ashera.layout.MultiSelectionSpinner>

        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="com.ashera.datetime.DatePicker"></TextView>

        <com.ashera.datetime.DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="com.ashera.datetime.TimePicker"></TextView>

        <com.ashera.datetime.TimePicker
            android:id="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch"></TextView>

        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chronometer"></TextView>

        <Chronometer
            android:id="@+id/stopWhenReached0"
            onChronometerTick=""
            startStop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Chronometer>

        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buttons"></TextView>

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"></ToggleButton>

        <Button
            android:id="@+id/validateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"></Button>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_clear"></ImageButton>

        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="com.ashera.layout.Link"></TextView>

        <com.ashera.layout.Link
            android:textSize="15sp"
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test link"></com.ashera.layout.Link>

        <TextView
            style="@style/blackBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ProgressBar"></TextView>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</ScrollView>