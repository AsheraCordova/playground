<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="error_banner" attrs="zIndex:1">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_red_300</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:text">@string/error_text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="drawer_view">
        <item name="android:background">@color/color_black</item>
    </style>

    <style name="drawer_border" attrs="borderColor:@color/color_gray_900;borderBottomWidth:1dp;"></style>

    <style name="blackBg">
        <item name="android:background">@color/color_black</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="button_style" attrs="backgroundCapInsetsLeft-swt:30dp;backgroundCapInsetsRight-swt:30dp;backgroundCapInsetsLeft-web:30dp;backgroundCapInsetsRight-web:30dp;backgroundCapInsetsLeft-ios:30dp;backgroundCapInsetsRight-ios:30dp;">
        <item name="android:background">@drawable/common_9_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="errorStyle">
        <item name="android:textColor">#f00</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>
    <style name="h2_white_bold">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2_white">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/color_white</item>
    </style>


</resources>