<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/motioncontent"
    zIndex="0"
    swtAttachEventBubbler="mousedown,mouseup,mousemove"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layoutDescription="@xml/scene_12_content">
    <FrameLayout
        android:id="@+id/n__content"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:onClick="openDrawerInMotionLayout"
        android:id="@+id/n__button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Drawer"></Button>
    </FrameLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>